{
  "manifest_version": 2,

  "name": "Youdao Dict",
  "description": "有道词典 Chrome 扩展",
  "version": "0.2.3",

  "icons": {
    "16": "build/img/icon.png",
    "48": "build/img/icon.png",
    "128": "build/img/icon.png",
    "256": "build/img/icon.png"
  },

  "homepage_url": "https://chrome.google.com/webstore/detail/youdao-dict/geboigdomoihijcamklnhlcgnnpdgkmg",

  "background": {
    "persistent": false,
    "scripts": ["build/js/background.js"]
  },

  "browser_action": {
    "default_icon": "build/img/icon.png",
    "default_popup": "build/popup.html"
  },

  "permissions": [
    "cookies",
    "http://fanyi.youdao.com/",
    "http://dict.youdao.com/",
    "storage"
  ],

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "all_frames": true,
      "css": [],
      "js": ["build/js/bubble.js"]
    }
  ],

  "web_accessible_resources": [
  ],

  "options_ui": {
    "page": "build/options.html",
    "chrome_style": true
  }
}
