{
  "manifest_version": 2,

  "name": "Youdao Dict",
  "description": "有道词典 Chrome 扩展",
  "version": "0.0.4",

  "icons": {
    "16": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/icon.png",
    "256": "img/icon.png"
  },

  "homepage_url": "https://github.com/youngdze/YoudaoDict",

  "background": {
    "persistent": false,
    "scripts": ["js/background.js"]
  },

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "http://fanyi.youdao.com/",
    "storage"
  ],

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "all_frames": true,
      "css": [
        "css/bubble.css"
      ],
      "js": [
        "lib/mustache/mustache.min.js",
        "js/Youdao.js",
        "js/bubble.js"
      ]
    }
  ],

  "web_accessible_resources": [
    "template/bubble.html"
  ],

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}